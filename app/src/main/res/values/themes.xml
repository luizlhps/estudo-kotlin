<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PokeApp" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- background -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>


        <!--text-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>


    </style>
    <style name="Theme.PokeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.PokeApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PokeApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>